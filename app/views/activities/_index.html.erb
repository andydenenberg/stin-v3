
<table class="zebra-striped">
  <tr>
    <th>Name</th>
    <th>Organization</th>
    <th>User</th>
    <th>Duration</th>
    <th>Date</th>
    <th></th>
    <th></th>
  </tr>

<% @activities.each do |activity| %>
  <tr>
    <td><%= link_to activity.name , activity_path(activity) %></td>
    <td><%= activity.org.organization %></td>
    <td><%= activity.user.username %></td>
	<td><%= activity.duration %></td>
	<td><%= activity.starttime.to_formatted_s(:short) %></td>
    <td><%= link_to 'Edit', edit_activity_path(activity), :class => "label", :method => :get %>
		<%= link_to 'Destroy', activity, :class => "label warning", confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>

</table>
  
