<style type="text/css">
	.page-header {
	  margin-bottom: 10px;
	  height: 40px;
	  border-bottom: 1px solid #ddd;
	  -webkit-box-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
	  -moz-box-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
	  box-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
	}
</style>


      <div class="content">
	
 		<div class="page-header">
				<ul class="pills">
				  <li><%= link_to 'Home' , root_path %></li>
				  <li><%= link_to 'Organizations' , orgs_path %></li>
				  <li class="active"><a href="#">Activities</a></li>
				  <li><a href="#">Donations</a></li>
				  <li><a href="#">News and Comments</a></li>
				  <li><%= link_to "Users", users_path %></li>
				</ul>
		</div>
		<p class="notice"><%= notice %></p>

		<div class = "row"> <!-- /outer box -->
			<div class = "span16">

		    <fieldset>
				<legend>Activity Information</legend>

				<div class = "row"> <!--  -->
					<div class = "span5 offset1">
						<p>Name:&nbsp;<%= @activity.name %></p>
						<p>Organization:&nbsp;<%= @activity.org_id %></p>
						<p>Worker:&nbsp;<%= @activity.user.username %></p>
						<p>Additional Worker1:&nbsp;<%= @activity.worker1 %></p>
						<p>Additional Worker2:&nbsp;<%= @activity.worker2 %></p>
						<p>Additional Worker3:&nbsp;<%= @activity.worker3 %></p>
						<p>Additional Worker4:&nbsp;<%= @activity.worker4 %></p>
						<p>Additional Worker5:&nbsp;<%= @activity.worker5 %></p>
					</div>


					<div class = "span5 offset1">
						<p>Start Time:&nbsp;<%= @activity.starttime %></p>
						<p>Duration in Hours:&nbsp;<%= @activity.duration %></p>
						<p>Description:&nbsp;<%= @activity.description %></p>
						<p>Impact:&nbsp;<%= x_impact(@activity.impact) %></p>
						<p>Reward:&nbsp;<%= x_reward(@activity.reward) %></p>

					</div>
				</div>
			</fieldset>



<div class = "row"> <!--  -->
	<div class = "span7 offset1">
		<%= link_to 'Edit Activity', edit_activity_path(@activity) , :class => "btn info" %>
		<%= link_to 'No Change', activities_path , :class => "btn success" %>
		
	</div>
</div>

</div>
