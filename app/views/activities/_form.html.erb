<style type="text/css">
	.page-header {
	  margin-bottom: 10px;
	  height: 40px;
	  border-bottom: 1px solid #ddd;
	  -webkit-box-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
	  -moz-box-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
	  box-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
	}
</style>

 <div class="content">

 		<div class="page-header">
				<ul class="pills">
				  <li><%= link_to 'Home' , root_path %></li>
				  <li><%= link_to 'Organizations' , orgs_path %></li>
				  <li class="active"><a href="#">Activities</a></li>
				  <li><a href="#">Donations</a></li>
				  <li><a href="#">News and Comments</a></li>
				  <li><%= link_to "Users", users_path %></li>
				</ul>
		</div>
		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>

		<%= form_for(@activity) do |f| %>
		  <% if @activity.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@activity.errors.count, "error") %> prohibited this activity from being saved:</h2>

		      <ul>
		      <% @activity.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>


	<div class = "row"> <!-- /outer box -->
		<div class = "span16">
				
							
						  <div class="clearfix">
					          <label for="xlInput3">Name</label>
					          <div class="input">
						    	<%= f.text_field :name %>
							  </div>
						  </div>
						
						  <div class="clearfix">
					          <label for="xlInput3">Organization</label>
					          <div class="input">
								<%= f.collection_select( :org_id , Org.all, :id, :organization) %>
							  </div>
						  </div>
						  <div class="clearfix">
					          <label for="xlInput3">Worker</label>
					          <div class="input">
								<%= f.collection_select( :user_id , User.all, :id, :username) %>
							  </div>
						  </div>
						  <div class="clearfix">
					          <label for="xlInput3">Impact</label>
					          <div class="input">
							    <span class="description">How useful was the activity?</span><br>
							    <%= f.select :impact, impact_choices %>
							  </div>
						  </div>
						  <div class="clearfix">
					          <label for="xlInput3">Impact</label>
					          <div class="input">
							    <span class="description">How did the activity make you feel?</span><br>
							    <%= f.select :reward, reward_choices %>
							  </div>
						  </div>
						  <div class="clearfix">
					          <label for="xlInput3">Start Date</label>
					          <div class="input">
							    <%= f.datetime_select :starttime, :default => { :hour => Time.now.hour, :minute => Time.now.min } , :ampm => true %><br>
							  </div>
						  </div>
						  <div class="clearfix">
					          <label for="normalSelect">Start Date</label>
					          <div class="input">
							    <%= f.datetime_select :endtime,  :default => { :hour => ( Time.now.+2.hour ).hour, :minute => Time.now.min }, :ampm => true %>	
							  </div>
						  </div>


 
				        <div class="clearfix">
				          <label for="comments">Description</label>
				          <div class="input textarea span5">
						    <%= f.text_area :description ,  :class=>"xlarge" ,  :rows => '7', %>
				          </div>
				        </div><!-- /clearfix -->


		 <div class="actions">
		   <button type="submit" class="btn success">Send</button>&nbsp;&nbsp;&nbsp;<a class="btn info" href="/">Cancel &raquo;</a>
		 </div>

			<% end %>

		</div> <!-- /outer box span-->
  </div> <!-- /outer box row-->

</div> <!-- /content -->

