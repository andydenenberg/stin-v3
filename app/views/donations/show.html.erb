<style type="text/css">
	.page-header {
	  margin-bottom: 10px;
	  height: 40px;
	  border-bottom: 1px solid #ddd;
	  -webkit-box-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
	  -moz-box-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
	  box-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
	}
</style>


<div class="content">
	
 		<div class="page-header">
				<ul class="pills">
				  <li><%= link_to 'Home' , home_index_path %></li>
				  <li><%= link_to 'Organizations' , orgs_path %></li>
				  <li><%= link_to 'Activities' , activities_path %></li>
				  <li class="active"><%= link_to 'Donations' , donations_path %></li>
				  <li><a href="#">News and Comments</a></li>
				  <li><%= link_to "Users", users_path %></li>
				</ul>
		</div>
		<p class="notice"><%= notice %></p>

		<div class = "row"> <!-- /outer box -->
			<div class = "span16">

		    <fieldset>
				<legend>Donation Information</legend>

				<div class = "row"> <!--  -->
					<div class = "span5 offset1">
					<p id="notice"><%= notice %></p>
					<p>Organization: <%= @donation.org.organization %></p>
					<p>Sponsor: <%= @donation.user.username %></p>
					<p>Kind: <%= x_donation_kind(@donation.kind) %></p>
					<p>Value: <%= number_to_currency(@donation.value) %></p>
					<p>Description: <%= @donation.description %></p>
					<p>Made by: <%= @donation.made_by %></p>
				</div>
			</fieldset>



			<div class = "row"> <!--  -->
				<div class = "span7 offset1">
					<%= link_to 'Edit Donation', edit_donation_path(@donation) , :class => "btn info" %>
					<%= link_to 'No Change', donations_path , :class => "btn success" %>

	</div>
</div>

</div>
