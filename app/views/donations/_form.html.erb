$(document).ready(function(){
	 processChange();
})

function processChange( ) {
  Initial_Date = document.getElementById('datemade').value ;
//	alert(Initial_Date);

  $("#datemade").datepicker( { dateFormat: 'yy-mm-dd', defaultDate: Initial_Date });

  }

$(function() {				
  $("#datemade").focus(function() {	
     processChange( ) ;
  });
				
});	
		
</script>

