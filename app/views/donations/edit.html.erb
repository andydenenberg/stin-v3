<style type="text/css">
	.page-header {
	  margin-bottom: 10px;
	  height: 40px;
	  border-bottom: 1px solid #ddd;
	  -webkit-box-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
	  -moz-box-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
	  box-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
	}
</style>


      <div class="content">
	
 		<div class="page-header">
				<ul class="pills">
				  <li><%= link_to 'Home' , home_index_path %></li>
				  <li><%= link_to 'Organizations' , orgs_path %></li>
				  <li><%= link_to 'Activities' , activities_path %></li>
				  <li class="active"><%= link_to 'Donations' , donations_path %></li>
				  <li><a href="#">News and Comments</a></li>
				  <li><%= link_to "Users", users_path %></li>
				</ul>
		</div>
		<div class="notice"><%= notice %>
			<% if @donation.errors.any? %>
					  <p><strong><%= pluralize(@donation.errors.count, "error") %> prohibited this activity from being saved:</strong></p>
						<ul><% @donation.errors.full_messages.each do |msg| %>
					        <li><%= msg %></li>
					    <% end %>
						</ul>
			<% end %>
		</div>

      <%= form_for :donation, :url => donations_path, :html => { :class => :form } do |f| -%>
		<fieldset>
		  <legend>Donation</legend>
        <%= render :partial => "form", :locals => {:f => f} %>
		</fieldset>
      <% end -%>

</div>