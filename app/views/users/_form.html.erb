
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<form action="" class="form">
      <div class="clearfix">
        <label for="xlInput3">Your Name</label>
        <div class="input">
			<%= f.text_field :username %>
		</div>
	 </div><!-- /clearfix -->

      <div class="clearfix">
        <label for="xlInput3">First Name</label>
        <div class="input">
			<%= f.text_field :first_name %>
		</div>
	 </div><!-- /clearfix -->

      <div class="clearfix">
        <label for="xlInput3">Last Name</label>
        <div class="input">
			<%= f.text_field :last_name %>
		</div>
	 </div><!-- /clearfix -->

      <div class="clearfix">
        <label for="xlInput3">Role</label>
        <div class="input">
			<%= f.select :role , roles %>
		</div>
	 </div><!-- /clearfix -->


      <div class="clearfix">
        <label for="xlInput3">Email</label>
        <div class="input">
			<%= f.text_field :email %>
		</div>
	 </div><!-- /clearfix -->

      <div class="clearfix">
        <label for="xlInput3">New Password</label>
        <div class="input">
			<%= f.password_field :password %>
		</div>
	 </div><!-- /clearfix -->

      <div class="clearfix">
        <label for="xlInput3">Password Confirmation</label>
        <div class="input">
			<%= f.password_field :password_confirmation %>
		</div>
	 </div><!-- /clearfix -->

 <div class="actions">
   <button type="submit" class="btn success">Send</button>&nbsp;&nbsp;&nbsp;<%= link_to 'Cancel >>', users_path , :class => "btn info"%>
 </div>


</form>

<% end %>